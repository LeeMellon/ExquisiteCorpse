@using ExquisiteCorpse1.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.ProfileName)
    @Html.TextBoxFor(user => user.ProfileName, new { placeholder = "Required"})

    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user => user.Email, new { placeholder = "Required" })

    @Html.LabelFor(user => user.Password)
    @Html.PasswordFor(user => user.Password, new { placeholder = "Required" })

    @Html.LabelFor(user => user.ConfirmPassword)
    @Html.PasswordFor(user => user.ConfirmPassword, new { placeholder = "Required" })

    <input type="submit" value="Register" />
}